{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@hooks/*": ["hooks/*"],
      "@lib/*": ["lib/*"],
      "@store/*": ["store/*"],
      "@orderForm/*": ["orderForm/*"],
      "@helpers/*": ["helpers/*"],
      "@constants/*": ["constants/*"],
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"]
    },
    "moduleResolution": "node",
    "esModuleInterop": true,
    "verbatimModuleSyntax": false
  }
}


